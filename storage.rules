rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload photos for listings
    match /listings/{collection}/{listingId}/{fileName} {
      allow read: if true; // Anyone can read/view photos
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // Authenticated users can upload, max 10MB
      allow delete: if request.auth != null; // Authenticated users can delete
    }
    
    // Allow access to all other paths (for backward compatibility)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

