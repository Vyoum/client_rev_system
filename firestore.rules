rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
      return isSignedIn() ? userDoc().data.role : null;
    }

    function isAdmin() {
      return isSignedIn() && userRole() == "admin";
    }

    function isSubadmin() {
      return isSignedIn() && (userRole() == "admin" || userRole() == "subadmin");
    }

    // Users collection - allow read/write for authenticated users
    match /users/{userId} {
      allow read: if isSubadmin() || (isSignedIn() && request.auth.uid == userId);
      allow create: if isSignedIn()
        && request.auth.uid == userId
        && (request.resource.data.role == null || request.resource.data.role == "user");
      allow update: if isAdmin()
        || (isSignedIn()
          && request.auth.uid == userId
          && request.resource.data.role == resource.data.role);
      allow delete: if false; // Prevent deletion of user records
    }
    
    // Listing collections (feed, school, colleges, kindergarden)
    // Allow read for everyone (to view published listings)
    // Allow write for admins and subadmins
    match /feed/{listingId} {
      allow read: if true; // Anyone can read
      allow create: if isSubadmin();
      allow update: if isSubadmin();
      allow delete: if isSubadmin();
    }
    
    match /school/{listingId} {
      allow read: if true;
      allow create: if isSubadmin();
      allow update: if isSubadmin();
      allow delete: if isSubadmin();
    }
    
    match /colleges/{listingId} {
      allow read: if true;
      allow create: if isSubadmin();
      allow update: if isSubadmin();
      allow delete: if isSubadmin();
    }
    
    match /kindergarden/{listingId} {
      allow read: if true;
      allow create: if isSubadmin();
      allow update: if isSubadmin();
      allow delete: if isSubadmin();
    }
    
    match /courses/{listingId} {
      allow read: if true;
      allow create: if isSubadmin();
      allow update: if isSubadmin();
      allow delete: if isSubadmin();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow create: if request.auth != null; // Only authenticated users can create reviews
      allow update: if isAdmin()
        || (isSignedIn()
          && resource.data.authorId == request.auth.uid
          && request.resource.data.authorId == request.auth.uid);
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.authorId == request.auth.uid);
    }
  }
}
